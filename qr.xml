<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="61dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo" />

    <!-- Título -->
    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:text="Udla Access"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:fontFamily="sans-serif" />

    <!-- Iconos -->
    <ImageView
        android:id="@+id/notificationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="320dp"
        android:contentDescription="Notificaciones"
        android:src="@drawable/notificacion" />

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Menú"
        android:src="@drawable/moreoptions" />

    <!-- Título de tareas -->
    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-medium"
        android:text="QR"
        android:textColor="#FFFFFF"
        android:textSize="70sp" />

    <!-- Imagen QR -->
    <ImageView
        android:id="@+id/qrCodeImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:contentDescription="Código QR"
        android:src="@drawable/eq" />

    <!-- Texto descriptivo -->

    <!-- Contador -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="420dp"
        android:text="Utiliza este código para acceder al campus!"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="460dp"
        android:text="Tiempo restante: 24sg"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</FrameLayout>

